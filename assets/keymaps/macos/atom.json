// Default Keymap (Atom) for Zed on MacOS
// Comments include the Atom command originally bound to this key.
[
  {
    "bindings": {
      "ctrl-alt-cmd-l": "workspace::Reload", // window:reload
      "cmd-k cmd-p": "workspace::ActivatePreviousPane", // window:focus-next-pane
      "cmd-k cmd-n": "workspace::ActivateNextPane" // window:focus-previous-pane
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-l": "language_selector::Toggle", // grammar-selector:show
      "cmd-|": "pane::RevealInProjectPanel", // tree-view:reveal-active-file
      "cmd-b": "editor::GoToDefinition", // fuzzy-finder:toggle-buffer-finder
      "alt-cmd-b": "editor::GoToDefinitionSplit", // N/A: From JetBrains
      "cmd-<": "editor::ScrollCursorCenter", // editor:scroll-to-cursor
      "cmd-g": ["editor::SelectNext", { "replace_newest": true }], // find-and-replace:find-next
      "cmd-shift-g": ["editor::SelectPrevious", { "replace_newest": true }], //find-and-replace:find-previous
      "ctrl-shift-down": "editor::AddSelectionBelow", // editor:add-selection-below
      "ctrl-shift-up": "editor::AddSelectionAbove", // editor:add-selection-above
      "cmd-shift-backspace": "editor::DeleteToBeginningOfLine", // editor:delete-to-beginning-of-line
      "cmd-k cmd-u": "editor::ConvertToUpperCase", // editor:upper-case
      "cmd-k cmd-l": "editor::ConvertToLowerCase", // editor:lower-case
      "alt-enter": "editor::Newline", // editor:newline
      "cmd-j": "editor::JoinLines", // editor:join-lines
      "cmd-shift-d": "editor::DuplicateLineDown", // editor:duplicate-lines
      "ctrl-cmd-up": "editor::MoveLineUp", // editor:move-line-up
      "ctrl-cmd-down": "editor::MoveLineDown", // editor:move-line-down
      "ctrl-shift-m": "markdown::OpenPreviewToTheSide" // markdown-preview:toggle
    }
  },
  {
    "context": "Editor && mode == full",
    "bindings": {
      "cmd-r": "outline::Toggle" // symbols-view:toggle-project-symbols
    }
  },
  {
    "context": "BufferSearchBar",
    "bindings": {
      "cmd-f3": "search::SelectNextMatch", // find-and-replace:find-next-selected
      "cmd-shift-f3": "search::SelectPrevMatch" // find-and-replace:find-previous-selected
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-\\": "workspace::ToggleLeftDock", // tree-view:toggle
      "cmd-k cmd-b": "workspace::ToggleLeftDock", // tree-view:toggle
      "cmd-t": "file_finder::Toggle", // fuzzy-finder:toggle-file-finder
      "cmd-shift-r": "project_symbols::Toggle" // symbols-view:toggle-project-symbols
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "alt-cmd-/": "search::ToggleRegex", // find-and-replace:toggle-regex-option
      "ctrl-0": "project_panel::ToggleFocus", // tree-view:toggle-focus
      "cmd-1": ["pane::ActivateItem", 0], // tree-view:open-selected-entry-in-pane-1
      "cmd-2": ["pane::ActivateItem", 1], // tree-view:open-selected-entry-in-pane-2
      "cmd-3": ["pane::ActivateItem", 2], // tree-view:open-selected-entry-in-pane-3
      "cmd-4": ["pane::ActivateItem", 3], // tree-view:open-selected-entry-in-pane-4
      "cmd-5": ["pane::ActivateItem", 4], // tree-view:open-selected-entry-in-pane-5
      "cmd-6": ["pane::ActivateItem", 5], // tree-view:open-selected-entry-in-pane-6
      "cmd-7": ["pane::ActivateItem", 6], // tree-view:open-selected-entry-in-pane-7
      "cmd-8": ["pane::ActivateItem", 7], // tree-view:open-selected-entry-in-pane-8
      "cmd-9": "pane::ActivateLastItem" // tree-view:open-selected-entry-in-pane-9
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "f2": "project_panel::Rename",
      "backspace": ["project_panel::Trash", { "skip_prompt": false }],
      "cmd-x": "project_panel::Cut", // tree-view:cut
      "cmd-c": "project_panel::Copy", // tree-view:copy
      "cmd-v": "project_panel::Paste" // tree-view:paste
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "ctrl-shift-c": "project_panel::CopyPath", // tree-view:copy-full-path
      "ctrl-[": "project_panel::CollapseSelectedEntry", // tree-view:collapse-directory
      "ctrl-b": "project_panel::CollapseSelectedEntry", // tree-view:collapse-directory
      "ctrl-]": "project_panel::ExpandSelectedEntry", // tree-view:expand-item
      "ctrl-f": "project_panel::ExpandSelectedEntry", // tree-view:expand-item
      "a": "project_panel::NewFile", // tree-view:add-file
      "d": "project_panel::Duplicate", // tree-view:duplicate
      "home": "menu::SelectFirst", // core:move-to-top
      "end": "menu::SelectLast", // core:move-to-bottom
      "shift-a": "project_panel::NewDirectory" // tree-view:add-folder
    }
  }
]
